{{!-- Ember CLI demands that partials are named with the convention `-form.hbs`.
      This is contrary to what the ember docs suggest (`_form.hbs`) --}}

{{!-- This action could alternatively been specified as a submit button. --}}
<form {{action "save" on="submit"}}>

  <h2>{{errorMessage}}</h2>
  
  <fieldset>
    <p>{{input value=model.firstName placeholder='First Name'}}</p>
    <p>{{input value=model.lastName placeholder="Last Name"}}</p>
    <p>{{input value=model.email placeholder="Email"}}</p>
    <p>{{input value=model.twitter placeholder="Twitter"}}</p>
    {{!-- Other input helpers exist like `{{input type='checkbox'}}` --}}
    <input type="submit" value="Save" class="primary">
    <button {{action "cancel"}}>Cancel</button>
  </fieldset>
</form>